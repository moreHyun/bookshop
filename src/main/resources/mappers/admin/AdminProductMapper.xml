<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.greedy.bookshop.admin.member.model.dao.AdminProductMapper">

<resultMap id="bookResultMap" type="com.greedy.bookshop.admin.member.model.dto.BookDTO">
	<id property="code" column="BOOK_CODE"/>
    <result property="name" column="BOOK_NAME"/>
    <result property="price" column="BOOK_PRICE"/>
    <result property="author" column="BOOK_AUTHOR"/>
    <result property="publisher" column="BOOK_PUBLISHER"/>
    <result property="categoryCode" column="CATEGORY_CODE"/>
    <result property="inventory" column="BOOK_INVENTORY"/>
    <result property="salesStatus" column="SALES_STATUS"/>
    <result property="hit" column="BOOK_HIT"/>
    <result property="isbn" column="BOOK_ISBN"/>
    <result property="translator" column="BOOK_TRANSLATOR"/>
    <result property="introduction" column="BOOK_INTRODUCTION"/>
    <result property="discount" column="BOOK_DISCOUNT"/>
    <result property="totalPrice" column="BOOK_TOTALPRICE"/>
</resultMap>

	<!-- 상품 등록 -->
	<insert id="bookEnroll">
  		INSERT INTO TBL_BOOK
  		(
  		BOOK_CODE,
  		BOOK_NAME, 
  		BOOK_PRICE, 
  		BOOK_AUTHOR, 
  		BOOK_PUBLISHER, 
  		CATEGORY_CODE, 
  		BOOK_INVENTORY, 
  		SALES_STATUS, 
  		BOOK_HIT, 
  		BOOK_ISBN, 
  		BOOK_TRANSLATOR, 
  		BOOK_INTRODUCTION,
  		BOOK_DISCOUNT,
  		BOOK_TOTALPRICE
  		)
		VALUES
		(
		SEQ_BOOK_CODE.NEXTVAL,
		#{bookName}, 
		#{bookPrice}, 
		#{bookAuthor}, 
		#{bookPublisher}, 
		#{categoryCode}, 
		#{bookInventory}, 
		#{salesStatus},
		#{bookHit},
		#{bookIsbn},
		#{bookTranslator}, 
		#{bookIntroduction},
		#{bookDiscount},
		#{bookTotalPrice}
		)

  	</insert>
	
   	<!-- 상품 조회 -->
 	<select id="getBookList" parameterType="java.util.Map" resultType="com.greedy.bookshop.admin.member.model.dto.BookSearchDTO">
    SELECT *
    FROM TBL_BOOK
    ORDER BY BOOK_CODE DESC
    
 	</select>

</mapper>